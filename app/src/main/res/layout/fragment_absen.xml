<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".fragment.AbsenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/lytButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="31/12/2016"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/textTanggal" />

            <TextView
                android:text="TOKO  :"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/textToko"
                android:text="Nama Toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <TextView
                android:text="DEPOT :"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/textDepot"
                android:text="DPT"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<!--            <Button
                android:id="@+id/btnSelfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="selfie"/>
-->

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_camera_alt_black_24dp" />

            <LinearLayout
                android:id="@+id/lytIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLokasi"
                    android:layout_below="@+id/LnLayoutData"
                    android:text="Lokasi anda :"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_place_black_24dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/textAttendance" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lytButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnAbsenMasuk"
            android:text="ABSEN MASUK"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".50"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"/>

        <Button
            android:id="@+id/btnAbsenPulang"
            android:text="ABSEN PULANG"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".50"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary" />
    </LinearLayout>
</RelativeLayout>